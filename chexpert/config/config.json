{   
    "path":{
        "project_path":"/root/repo",
        "root":"/root/data",
        "train_csv_path": "/root/data/CheXpert-v1.0-small/train.csv",
        "test_csv_path": "/root/data/CheXpert-v1.0-small/valid.csv" 
    },
    "class_idx":[ 7,10,11,13,15 ],
    
    "backbone": {
           "name":"densenet121",
           "pretrain":"True" 
    },
    
    "image":{
        "image_fix_length":320,
        "progressive_image_size":160
    
    },
    "train_mode":{
        "name":"default"
         
    },
    
    "load_ckp":"False",
    "criterion":"balanceBCE",
    "balanceBCE":{
        "beta":0.99
    },
    "train":{
        "epochs": 20,
        "log_interval":10,
        "batch_size": 64,
        "optimizer":{
            "name": "Adam",
            "lr":0.000075,
            "weight_decay":0.00001,
            "scheduler": "CosineAnnealingLR",
           "scheduler_params":
                {"T_max": 8,
                "eta_min": 0.000001,
                "epochs": 20
        }


        }  ,
       "early_stopping":{
            "use":"True",
            "patient":3

        }

    },
    "k_fold":5,
    "progressive_train":{
        "epochs": 10,
        "log_interval":64,
        "batch_size": 64,
        "optimizer":{
            "name": "Adam",
            "lr":1e-4,
            "weight_decay":0.0
        }
    },
    "mini_data":{
        "train":200,
        "test":200
    },
    "progressive_mini_data":{
        "train":200000,
        "val":200000
    }
}